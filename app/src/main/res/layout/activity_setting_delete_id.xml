<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAF9F6">

    <!-- 왼쪽에 "<"모양 뒤로가기 버튼 삽입-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원탈퇴"
        android:textSize="25sp"
        android:textColor="#012460"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원 탈퇴 신청 시 아래 내용을 확인해주세요"
        android:textColor="#121212"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_container"
        android:padding="16dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="탈퇴 시 유의사항"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#121212"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="탈퇴한 계정 및 키워드 설정 등 이용 내역을 복구할 수 없으니 유의하시길 바랍니다."
            android:textSize="10sp"
            android:textColor="#495057"/>

    </LinearLayout>

    <CheckBox
        android:id="@+id/cb_confirm"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_container"
        android:layout_gravity="center"
        android:text="(필수) 위 내용을 확인했습니다."
        android:textSize="10dp"
        android:textColor="#495057"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이메일"
        android:textSize="14sp"
        android:textColor="#495057"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="현재 이메일"
        android:textSize="12sp"
        android:textColor="#121212"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"/>

    <View
        android:layout_width="370dp"
        android:layout_height="2dp"
        android:background="#E0E0E0"
        android:layout_gravity="center"
        android:layout_marginTop="2dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_deleteID_fin"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:background="@drawable/button_background"
        android:layout_gravity="center"
        android:textSize="17sp"
        android:textColor="#FAF9F6"
        android:text="회원탈퇴"
        android:layout_marginTop="20dp"/>

</LinearLayout>